<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuantidade.MainPage"
             BackgroundColor="#FFFFF0" >

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="50">
        <Label Text="Quantidade" FontSize="20" HorizontalTextAlignment="Center" />
        <Label Text="1" FontSize="48" TextColor="Red" HorizontalTextAlignment="Center" 
               x:Name="lblQuantidade" />
        <StackLayout Orientation="Horizontal" Spacing="40">
            <Button Text="+" BorderWidth="1" BorderColor="#707070" BackgroundColor="White"
                    WidthRequest="90" HeightRequest="90" FontSize="48" TextColor="#707070"
                    x:Name="btnMais" Clicked="aumentar"  />
            <Button Text="-" BorderWidth="1" BorderColor="#707070" BackgroundColor="White"
                    WidthRequest="90" HeightRequest="90" FontSize="48" TextColor="#707070" 
                    x:Name="btnMenos" Clicked="diminuir"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
